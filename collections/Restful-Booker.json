				},
				"url": {
					"raw": "{{baseUrl}}/booking",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"booking"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Booking created successfully\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    pm.test(\"Booking data matches request\", () => {",
							"        pm.expect(jsonData.booking.firstname).to.eql(pm.environment.get(\"tmp_firstName\"));",
							"    });",
							"    pm.environment.set(\"bookingId\", jsonData.bookingid);",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const firstName = pm.variables.replaceIn('{{$randomFirstName}}');",
							"const lastName = pm.variables.replaceIn('{{$randomLastName}}');",
							"const totalPrice = Math.floor(Math.random() * 1000);",
							"",
							"pm.environment.set(\"tmp_firstName\", firstName);",
							"pm.environment.set(\"tmp_lastName\", lastName);",
							"pm.environment.set(\"tmp_totalPrice\", totalPrice);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
